= provide(:title, "View League")

%h4 League Name
%p= @league.name

%h4 League Fee
%p= number_to_currency(@league.fee_in_dollars)

%h4= link_to "Send League Intro Email", href: "#"
%br

%h4 Members
%table#leagueTable.table.table-striped.table-bordered
  %thead
    %tr
      %th Name
      %th Email
      %th Phone
      %th Balance
      %th Options

  %tbody
    = render partial: "members/member", locals: {members: @league.members}

= link_to "Add new member", new_league_member_path(@league), id: "new_member_link", remote: true

